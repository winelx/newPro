<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/writer"
    android:orientation="vertical">

    <TextView
        android:id="@+id/check_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="基本要求>>土石路基"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/check_details_userData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="张三      2018-00-00"
        android:textColor="@color/graytext"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/check_details_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="违反标准:对危险性较大的高边坡、高墩、大跨桥和地址复制隧道，为进行风险评估"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/check_details_why"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="整改事由:管理不规范,要求规定期限内完成整改"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/check_details_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="检查组织:监理一标"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="附件："
        android:textColor="@color/black" />
    <ImageView
        android:id="@+id/notimgeview"
        android:background="@mipmap/notimgeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/check_details_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/check_details_rectification_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="整改负责人:张三"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/check_details_lasetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="整改期限:2018-00-00"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/check_details_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="状态：未回复"
        android:textColor="@color/black"
        android:textSize="15sp" />


</LinearLayout>