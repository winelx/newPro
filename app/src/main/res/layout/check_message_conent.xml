<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/writer">

    <RelativeLayout
        android:id="@+id/check_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/check_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/viewone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/check_message_dialog"
                android:background="@color/back" />

            <LinearLayout
                android:id="@+id/checkmessage_Lin_standar"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@+id/viewone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="违反标准"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/checkmessage_standar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:hint="请输入内容"
                    android:minHeight="30dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/viewtwo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/checkmessage_Lin_standar"
                android:background="@color/back" />

            <LinearLayout
                android:id="@+id/check_message_touch"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@+id/viewtwo"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="整改事由"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/check_message_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:hint="请输入内容"
                    android:minHeight="30dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/viewthree"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/check_message_touch"
                android:background="@color/back" />

            <LinearLayout
                android:id="@+id/check_message_check"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/viewthree"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="检查人"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_message_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="张三"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/viewfour"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/check_message_check"
                android:background="@color/back" />

            <LinearLayout
                android:id="@+id/check_message_org_lin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/viewfour"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="检查组织"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_message_org"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="三独一标"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/viewfive"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/check_message_org_lin"
                android:background="@color/back" />

            <LinearLayout
                android:id="@+id/check_message_data"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/viewfive"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="检查时间"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/message_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="2018-08-07"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/mine_text"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="{fa-angle-right}"
                    android:textColor="@color/inconfy"
                    android:textSize="25sp" />

            </LinearLayout>


            <View
                android:id="@+id/viewsix"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/check_message_data"
                android:background="@color/back" />

            <LinearLayout
                android:id="@+id/check_message_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/viewsix"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" 整改负责人"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_message_username_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:hint="请选择"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/mine_text"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="{fa-angle-right}"
                    android:textColor="@color/inconfy"
                    android:textSize="25sp" />

            </LinearLayout>

            <View
                android:id="@+id/vieweleven"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/check_message_username"
                android:background="@color/back" />

            <LinearLayout
                android:id="@+id/check_message_lasttiem"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/vieweleven"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" 整改期限"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_message_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="2018-08-07"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/mine_text"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="{fa-angle-right}"
                    android:textColor="@color/inconfy"
                    android:textSize="25sp" />

            </LinearLayout>

            <View
                android:id="@+id/viewenght"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/check_message_lasttiem"
                android:background="@color/back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="附件"
                android:textColor="@color/black" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/check_message_rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/check_message"
            android:layout_marginTop="5dp" />


    </RelativeLayout>
</ScrollView>