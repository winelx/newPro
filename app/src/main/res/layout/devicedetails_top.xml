<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/details_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="龙门吊"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_top_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxEms="20"
            android:maxLines="1"
            android:text="编号1215152151515"
            android:textColor="@color/graytext"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/details_top_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="巡检人:张三"
            android:textColor="@color/graytext"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/details_top_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="巡检日期:2018-12-12"
            android:textColor="@color/graytext"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/details_top_rectifyorg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxEms="20"
        android:maxLines="1"
        android:text="整改组织:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details_top_blameuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:text="整改负责人:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details_top_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxEms="20"
        android:maxLines="1"
        android:text="使用地点:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details_top_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxEms="20"
        android:maxLines="1"
        android:text="型号规格:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details_top_inspectorg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxEms="20"
        android:maxLines="1"
        android:text="巡检组织:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details_top_remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxEms="20"
        android:maxLines="1"
        android:text="备注:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details_top_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxEms="20"
        android:maxLines="1"
        android:text="状态:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/back2" />

    <LinearLayout
        android:id="@+id/details_top_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="违反标准"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@mipmap/direction_right"
            android:gravity="end|center_vertical"
            android:text="查看详情"
            android:textColor="@color/colorAccent"
            android:textSize="13sp" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/details_top_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:maxHeight="100dp" />

</LinearLayout>