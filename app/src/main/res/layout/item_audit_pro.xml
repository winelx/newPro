<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/aduit_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10dp"
        android:text="人行通道"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/aduit_item_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxEms="20"
        android:singleLine="true"
        android:text="上一节点审核人上一节点审核人上一节点审核人上一节点审核人" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/aduit_item_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上一节点审核人"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/aduit_item_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="当前状态:待审核"
            android:textColor="@color/yellow"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>