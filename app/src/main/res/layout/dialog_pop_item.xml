<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    android:layout_margin="2dp"
    android:background="@color/writer"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_pop_image"
        android:layout_width="55dp"
        android:scaleType="centerCrop"
        android:layout_height="55dp" />

    <ImageView
        android:id="@+id/dialog_pop_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/presence_offline"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/dialog_pop_image"
        android:layout_alignEnd="@+id/dialog_pop_image" />


</RelativeLayout>