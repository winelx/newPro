<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_push_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:id="@+id/com_back"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:gravity="center"
                android:text="{fa-angle-left}"
                android:textColor="@color/writer"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="修改配置"
                android:textColor="@color/writer"
                android:textSize="18sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/com_title"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/writer"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/com_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|end"
            android:gravity="center|end"
            android:paddingRight="20dp"
            android:text="保存"
            android:textColor="@color/writer"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/pushdialog_task_context"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:background="@color/writer">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="任务内容:"
            android:textColor="@color/editext_text"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/pushdialog_item_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="35dp"
            android:layout_marginTop="2dp"
            android:background="@null"
            android:hint="输入任务内容"
            android:textColor="@color/textViwe"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pushdialog_send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pushdialog_task_context"
        android:layout_marginTop="0.5dp"
        android:background="@color/writer">

        <TextView
            android:id="@+id/pushdialog_send_item"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="推送次数:"
            android:textColor="@color/editext_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pushdialog_sendnumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:gravity="center"
            android:textColor="@color/textViwe"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/push_duty"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pushdialog_send"
        android:layout_marginTop="0.5dp"
        android:background="@color/writer">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="负责人:"
            android:textColor="@color/editext_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/push_item_duty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:gravity="center"

            android:textColor="@color/textViwe"
            android:textSize="15sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:text="{fa-angle-right}"
            android:textColor="@color/inconfy"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/push_conditions"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/push_duty"
        android:background="@color/writer">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="前置条件:"
            android:textColor="@color/editext_text"
            android:textSize="15sp" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:scrollbars="none">

            <TextView
                android:id="@+id/push_item_conditions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="少时诵诗书所所所所所所sssssssssssssssssssssssssssssssssssssssssssssssssssss"
                android:textColor="@color/textViwe"
                android:textSize="15sp" />
        </ScrollView>


        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:text="{fa-angle-right}"
            android:textColor="@color/inconfy"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/push_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/push_conditions"
        android:layout_marginTop="0.5dp"
        android:background="@color/writer">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="推送内容:"
            android:textColor="@color/editext_text" />

        <EditText
            android:id="@+id/push_item_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/textView3"
            android:background="@drawable/editext_background_blue"
            android:gravity="left"
            android:hint="输入推送内容"
            android:padding="5dip"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>