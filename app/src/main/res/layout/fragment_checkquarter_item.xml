<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/writer"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/check_report_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/list_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/home_item_blue"
        android:gravity="center"
        android:textColor="@color/writer"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/list_orgid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_ranking"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/list_ranking"
        android:layout_toRightOf="@+id/list_ranking"
        android:ellipsize="end"
        android:maxEms="11"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_ranking"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/list_ranking"
        android:layout_toRightOf="@+id/list_ranking"
        android:ellipsize="end"
        android:maxEms="14"
        android:singleLine="true"
        android:textColor="@color/graytext" />


    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/home_item_style"
        android:gravity="center"
        android:textColor="@color/writer"
        android:textSize="10sp" />
    </RelativeLayout>
</RelativeLayout>