<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/com_content"
        android:background="@color/writer"
        android:visibility="gone"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textColor="@color/textViwe"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_title_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/writer"
                android:textSize="10sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/details_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:text="时间"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/details_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_data"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:lineSpacingExtra="4dp"
            android:text="内容"
            android:textColor="@color/textViwe"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/back" />

        <LinearLayout
            android:id="@+id/details_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="被转交人"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/details_in_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_fixed_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="责任人:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/details_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/details_fixed_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传时间:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/details_end_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_fixed_boolean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/details_boolean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textColor="@color/Orange"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/handover_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转交说明:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/handover_status_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/textViwe"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
c
</RelativeLayout>