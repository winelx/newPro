<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_bottom"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/warning_red"
            android:drawablePadding="5dp"
            android:text="检查名称"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/check_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="请输入"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_bottom"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/warning_red"
            android:drawablePadding="5dp"
            android:text="检查日期"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/check_time_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical|end"
            android:hint="请选择"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_bottom"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/warning_red"
            android:drawablePadding="5dp"
            android:text="检查类型"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/check_type_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical|end"
            android:hint="请选择"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/project_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@drawable/item_bottom"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/warning_red"
            android:drawablePadding="5dp"
            android:text="工程类型"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/project_type_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical|end"
            android:hint="请选择"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/poroject_score"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_bottom"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="项目第一阶段得分"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/fTotalSocre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical|end"
            android:hint="系统自动计算"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/route_lin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_bottom"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="项目最终得分"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/totalSocre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical|end"
            android:hint="系统自动计算"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_bottom"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="所属标段"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/ascription_bid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical|end"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_bottom"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="检查组织"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/ascription_org"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical|end"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_bottom"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="检查人"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/ascription_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical|end"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>