<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/writer"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="单据编号"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/new_inspect_billnumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:maxEms="16"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back2" />

    <LinearLayout
        android:id="@+id/new_inspect_org_lin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/warning_red"
            android:gravity="center_vertical"
            android:text="整改组织"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/new_inspect_org"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:hint="请选择"
            android:maxEms="16"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/mine_text3"
            android:layout_marginRight="10dp"
            android:gravity="end|center_vertical"
            android:text="{fa-angle-right}"
            android:textColor="@color/inconfy"
            android:textSize="25sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back2" />

    <LinearLayout
        android:id="@+id/new_inspect_facility_lin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/warning_red"
            android:gravity="center_vertical"
            android:text="设备名称"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/new_inspect_facility"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:hint="请选择"
            android:maxEms="16"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/mine_text3"
            android:layout_marginRight="10dp"
            android:gravity="end|center_vertical"
            android:text="{fa-angle-right}"
            android:textColor="@color/inconfy"
            android:textSize="25sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"

        android:focusableInTouchMode="true"
        android:minHeight="45dp"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:drawableLeft="@mipmap/warning_red"
            android:gravity="center_vertical"
            android:text="设备编号"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/new_inspect_facilitynumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:hint="请输入"
            android:paddingLeft="11.5dp"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="45dp"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/warning_red"
            android:gravity="center_vertical"
            android:text="型号规格"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/new_inspect_facilitymodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:hint="请输入"
            android:paddingLeft="11.5dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/warning_red"
            android:gravity="center_vertical"
            android:text="设备使用地点"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/new_inspect_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:hint="请输入"
            android:paddingLeft="11.5dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back2" />

    <LinearLayout
        android:id="@+id/new_inspect_data_lin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/warning_red"
            android:gravity="center_vertical"
            android:text="巡检日期"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/new_inspect_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="end|center_vertical"
            android:hint="请选择"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/mine_text3"
            android:layout_marginRight="10dp"
            android:gravity="end|center_vertical"
            android:text="{fa-angle-right}"
            android:textColor="@color/inconfy"
            android:textSize="25sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back2" />

    <LinearLayout
        android:id="@+id/new_inspect_username_lin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/warning_red"
            android:gravity="center_vertical"
            android:text="整改负责人"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/new_inspect_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="end|center_vertical"
            android:hint="请选择"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/mine_text3"
            android:layout_marginRight="10dp"
            android:gravity="end|center_vertical"
            android:text="{fa-angle-right}"
            android:textColor="@color/inconfy"
            android:textSize="25sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="备注"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/new_inspect_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:hint="请输入"
            android:minHeight="30dp"
            android:paddingLeft="11.5dp"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>