<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.fengji.pzgc.utils.LeftSlideView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/back"
    android:gravity="center_vertical"
    android:minHeight="180dp">


    <RelativeLayout
        android:id="@+id/item_not"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back">

        <!--"设置"，"删除"按钮使用了TextView而不是Button，是因为５.０以上版本使用Button会显示在上层产出错误显示-->

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/device_layout_content"
            android:layout_toRightOf="@+id/device_layout_content"
            android:background="@mipmap/check_delete"
            android:gravity="center"
            android:textColor="#DDFFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_set"
            android:layout_width="20dp"
            android:layout_height="170dp"
            android:layout_toEndOf="@+id/tv_delete"
            android:layout_toRightOf="@+id/tv_delete"
            android:gravity="center"
            android:minHeight="80dp"
            android:textSize="25sp" />

        <RelativeLayout
            android:id="@+id/device_layout_content"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginBottom="5dp"
            android:background="@color/writer">

            <com.example.administrator.fengji.pzgc.utils.SlantedTextView
                android:id="@+id/inface_item_message"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:slantedLength="28dp"
                app:slantedMode="right_triangle"
                app:slantedText="未完成"
                app:slantedTextColor="@color/writer"
                app:slantedTextSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/device_message_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxEms="20"
                    android:maxLines="1"
                    android:text="测试数据"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/device_message_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="5dp"
                    android:text="测试数据测试数据"
                    android:textColor="@color/graytext"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/device_message_org"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:text="巡检组织：测试标段"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/device_message_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="5dp"
                    android:text="整改负责人：测试标段"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/back2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/device_message_createname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:text="巡检人：张三"
                        android:textColor="@color/graytext" />

                    <TextView
                        android:id="@+id/device_message_createdata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:text="巡检日期:2018-12-12"
                        android:textColor="@color/graytext" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</com.example.administrator.fengji.pzgc.utils.LeftSlideView>