<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zcjlmodule.ui.activity.original.enclosure.ChoiceProjectZcActivity">

    <include layout="@layout/toolbar_icon_zc" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_emptyview_zc" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/original_refreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/attachproject_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </FrameLayout>

</LinearLayout>
