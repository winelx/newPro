<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_10"
        android:background="@color/back" />

    <include layout="@layout/assembly_org_switch" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_10"
        android:background="@color/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="期数"
            android:textColor="@color/graytext"
            android:textSize="@dimen/dimens_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="申请金额"
            android:textColor="@color/graytext"
            android:textSize="@dimen/dimens_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="创建者"
            android:textColor="@color/graytext"
            android:textSize="@dimen/dimens_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="创建时间"
            android:textColor="@color/graytext"
            android:textSize="@dimen/dimens_12" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:background="@color/back" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/recycler_empty"
            layout="@layout/recycler_empty_zc" />
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/assembly_recycler_smart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            <measure.jjxx.com.baselibrary.view.EmptyRecyclerView
                android:id="@+id/assembly_recyclerview"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:layout_height="match_parent" />

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="45dp" />

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>



    </RelativeLayout>


</LinearLayout>