<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_white"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/text_icon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignLeft="@+id/receivedata"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/receivedata"
            android:background="@mipmap/zc_fragment_message_capitalapprova" />


        <TextView
            android:id="@+id/havedone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/text_icon"
            android:layout_toRightOf="@+id/text_icon"
            android:gravity="center"
            android:maxEms="23"
            android:text="征地拆迁资金拨付申请单"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/havedone_receivedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_icon"
            android:layout_marginTop="5dp"
            android:text="接收时间：2018-12-12 12:00:00"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBaseline_creator="@+id/text_icon" />

        <TextView
            android:id="@+id/havedone_handledata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/havedone_receivedata"
            android:layout_marginTop="5dp"
            android:text="处理时间："
            android:textColor="@color/black"
            android:textSize="15sp" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/havedone_handledata"
            android:layout_marginTop="10dp"
            android:background="@color/back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/havedone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发起人:"
                android:textColor="@color/graytext"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/havedone_consume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="耗时:"
                android:textColor="@color/graytext"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>