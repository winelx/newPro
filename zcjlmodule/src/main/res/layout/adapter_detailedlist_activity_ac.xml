<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/pay_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="土地05"
                android:textColor="@color/black"
                android:textSize="@dimen/text_17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pay_list_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:ellipsize="end"
                android:maxEms="12"
                android:maxLines="1"
                android:text="独国土资拨(2015) 05号独国土资独国土资"
                android:textColor="@color/black"
                android:textSize="@dimen/text_10" />


            <TextView
                android:id="@+id/pay_list_datanumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:gravity="end"
                android:text="第01期"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_17" />

        </LinearLayout>

        <TextView
            android:id="@+id/pay_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxEms="23"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:text="独山县三独告诉公路工程建设指独山县三独告诉公路工程建设指挥部挥部"
            android:textColor="@color/graytext"
            android:textSize="@dimen/text_15" />


        <TextView
            android:id="@+id/pay_list_paymoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:text="支付金额：17342.42"
            android:textColor="@color/graytext2"
            android:textSize="@dimen/text_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_list_checkmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="已核查金额：17342.42"
                android:textColor="@color/graytext2"
                android:textSize="@dimen/text_15" />


            <TextView
                android:id="@+id/pay_list_nocheckmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="未核查金额：-173442.42"
                android:textColor="@color/graytext2"
                android:textSize="@dimen/text_15" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>