<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical">



    <include
        android:id="@+id/recycler_empty"
        layout="@layout/recycler_empty_zc" />
    <TextView
        android:id="@+id/page_apply_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50"
        android:layout_marginTop="@dimen/dimens_10"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimens_20"
        android:text="申请期数:第一期"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_15" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/page_refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/page_apply_number"
        android:layout_marginBottom="@dimen/dimens_40">


        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40" />

        <measure.jjxx.com.baselibrary.view.EmptyRecyclerView
            android:id="@+id/fragment_messag_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_white"
            android:layout_marginTop="@dimen/dimens_10" />

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <LinearLayout
        android:id="@+id/zc_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_45"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/page_apply_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimens_20"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="总计：12121212"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/page_apply_examine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="审核"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/text_15" />

    </LinearLayout>
</RelativeLayout>